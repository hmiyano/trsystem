<header>
  <nav class="navbar navbar-default navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-left" href="/"><img src="/images/logo.png" alt="CRISP Training System"></a>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          
          <% if te_logged_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <span class="gravatar">
                  <img src="/images/te_logo.png" width="20" height="20" alt="" class="img-circle">
                </span>

                <%= current_trainee.name %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to 'マイページ', trainee_path(current_trainee) %>
                </li>
                <li role="separator" class="divider"></li>
                <li>
                  <li><%= link_to 'ログアウト', te_logout_path, method: :delete %></li>
                </li>
              </ul>
            </li>
          <% elsif tr_logged_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <span class="gravatar">
                  <img src="/images/tr_logo.png" width="20" height="20" alt="" class="img-circle">
                </span>
                <%= current_trainer.name  + '(トレーナー)' %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to 'マイページ', trainer_path(current_trainer) %>
                </li>
                <li role="separator" class="divider"></li>
                <li>
                  <li><%= link_to 'ログアウト', tr_logout_path, method: :delete %></li>
                </li>
              </ul>
            </li>            
          <% elsif admin_logged_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <span class="gravatar">
                  <img src="/images/admin_logo.png" width="20" height="20" alt="" class="img-circle">
                </span>
                <%= current_admin.name + '(管理者)'%>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to 'マイページ', admin_path(current_admin) %>
                </li>
                <li role="separator" class="divider"></li>
                <li>
                  <li><%= link_to 'ログアウト', admin_logout_path, method: :delete %></li>
                </li>
              </ul>
            </li>                        
            
            
            
          <% else %>
          
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                ログイン
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to 'トレーニーログイン', te_login_path %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to 'トレーナーログイン', tr_login_path %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to '管理者ログイン', admin_login_path %></li>
              </ul>
            </li>                        

          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>