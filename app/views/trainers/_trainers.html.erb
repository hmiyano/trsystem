<% if trainers.any? %>
  <ul class="media-list">
    <% trainers.each do |trainer| %>
      <li class="media">
        <div class="media-left">
          <img class="media-object img-rounded" src="/images/tr_logo.png" width="20" height="20" alt="" class="img-circle">
        </div>
    
        <div class="media-body">
          <div>
            <%= trainer.name %>
          </div>
        
          <div>
            <p><%= link_to 'プロフィールをみる', trainer_path(trainer) %></p>
          </div>
        </div> 
      </li>
      <% end %>
  </ul>
  <%= paginate trainers %>
<% end %>