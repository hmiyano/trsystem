<% breadcrumb :edit_trainer, @trainer %>
<div class="row">
  <div class="col-xs-8">
    
    <div class="panel panel-default">
      <div class="panel-heading">トレーナー編集</div>
      
        <div class="panel-body"> 
    
    
    <%= form_for(@trainer) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>

          <% if admin_logged_in? %>
          <div class="form-group">
            <%= f.label :enable, '有効設定' %>
            <%= f.check_box :enable, class: 'form-control' %>
          </div>
          <% end %>
          
          <div class="form-group">
        <%= f.label :name, '名前' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

          <div class="form-group">
            <%= f.label :nickname, 'ニックネーム' %>
            <%= f.text_field :nickname, class: 'form-control' %>
          </div>
      
      <div class="form-group">
        <%= f.label :email, 'Email' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      
          <div class="form-group">
            <%= f.label :branch, '所属店舗' %>
            <%= f.select :branch, options_for_select([["CR麻布十番店","CR麻布十番店"],["CR恵比寿店","CR恵比寿店"],["CR六本木ヒルズ店","CR六本木ヒルズ店"],["CR代官山店","CR代官山店"],["CR広尾店","CR広尾店"]]),{}, class: "form-control" %>
          </div>

      <div class="form-group">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, 'パスワード（確認）' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>

      <%= f.submit '編集完了', class: 'btn btn-primary' %>
    <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
