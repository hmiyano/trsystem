<% if tr_logged_in? %>
  <% if checklist.tr_checks.find_by(trainee_id: trainee.id) %>
    <font size="1">MASTERされた日：<%= checklist.tr_checks.first.updated_at if checklist.tr_checks.first %> </font>


    <%= form_for(checklist.tr_checks.find_by(trainee_id: trainee.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :checklist_id, checklist.id %>
      <%= hidden_field_tag :trainee_id, trainee.id %>
      <%= f.submit 'UNMASTER', class: 'btn btn-warning btn-xs' %>
    <% end %>
  <% else %>
    <%= form_for(current_trainer.tr_checks.build) do |f| %>
      <%= hidden_field_tag :checklist_id, checklist.id %>
      <%= hidden_field_tag :trainee_id, trainee.id %>
      <%= f.submit 'MASTERする', class: 'btn btn-danger btn-xs' %>

    <% end %>
  <% end %>
<% elsif te_logged_in? %>
  <% master = checklist.tr_checks.find_by(trainee_id: trainee.id) %>
  <% if master %>
    MASTERED AT :
    <%= checklist.tr_checks.first.updated_at.in_time_zone('Tokyo') if checklist.tr_checks.first %>
  <% else %>
    MASTERされていません
  <% end %>
<% end %>