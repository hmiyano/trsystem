<div class="user-profile">
  <div class="icon text-center">
    <img src="/images/te_logo.png" width="120" height="120" alt="" class="img-circle">
  </div>

  <% if te_logged_in? %>  
    <div class="name text-center">
      <h2><%= @trainee.nickname %>さん、今日もお疲れさまです！</h2>
      <h5>[ <%= @trainee.name %> : <%= @trainee.branch %> ]</h5>
      
      <% exctr = Trainer.find(@trainee.trainer_id).nickname unless @trainee.trainer_id.nil? %>
      <% exctr = "未設定" if exctr.nil? %>
      
      <button class="btn btn-primary" disabled="disabled">専任トレーナー： <%= exctr %></button>
    </div>
    <div class="status text-center">
      <ul>
        <li><div class="status-label"><%= link_to 'プロフィール編集', edit_trainee_path(@trainee) %></div></li>
      </ul>
    </div>
    
    <%= render 'progress', checklists: @checklists, trainee: @trainee %>

  <% elsif tr_logged_in? %>
    <div class="name text-center">
      <h1><%= @trainee.nickname %>さんのトレーニングシート</h1>
      <h5>[ <%= @trainee.name %> : <%= @trainee.branch %> ]</h5>


<!--専任トレーナー-->

         <%= form_for(@trainee) do |f| %>

          <div class="form-group">
            <%= f.hidden_field :trainer_id, value: current_trainer.id, class: 'form-control' %>
          </div>
          
      <% exctr = Trainer.find(@trainee.trainer_id).nickname unless @trainee.trainer_id.nil? %>
      <% exctr = "未設定" if exctr.nil? %>
      <%= f.submit '専任トレーナー: ' + exctr , data: { confirm: "専任トレーナーを変更します。本当に専任トレーナーを変更しても良いですか？"}, class: 'btn btn-primary' %>
    <% end %>

    </div>
        <%= render 'progress', checklists: @checklists, trainee: @trainee %>

    
  <% elsif admin_logged_in? %>
    <div class="name text-center">
      <h1><%= @trainee.nickname %>さんのトレーニングシート</h1>
      <h5>[ <%= @trainee.name %> : <%= @trainee.branch %> ]</h5>
    </div>
    <div class="status text-center">
      <ul>

        <li><div class="status-label"><%= link_to '編集', edit_trainee_path(@trainee) %></div></li>
        <li><div class="status-label"><%= link_to '削除', @trainee, method: :delete, data: { confirm: '本当にユーザを削除してよろしいですか？' } %></div></li>
      </ul>
    </div>
    
        <%= render 'checklists/checklists', checklists: @checklists, trainee: @trainee %>
    <% end %>
</div>

