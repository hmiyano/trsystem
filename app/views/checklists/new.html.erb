<div class="row">
  <div class="col-xs-8">
    
    <%= form_for(@checklist) do |f| %>

      <% if @checklist.errors.any? %>
        <div class="alert alert-warning">
          <ul>
            <% @checklist.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :grade, 'WG' %>
        <%= f.text_field :grade, value: "PG1/A:C", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :chapter, 'チャプター' %>
        <%= f.text_field :chapter, value: "チョッパー①", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :section, 'セクション' %>
        <%= f.text_field :section, value: "クリスプAPP", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :content, 'チェック項目' %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>

      <%= f.submit '登録完了', class: 'btn btn-primary' %>
    <% end %>

  </div>
</div>
